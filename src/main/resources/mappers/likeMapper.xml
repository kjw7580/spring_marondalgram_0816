<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.kimjinwoo.marondalgram.post.dao.LikeDAO">
 	<insert id="insertLike" parameterType="map">
 		INSERT INTO
 			`like`
 		(
 			`userId`
 			, `postId`
 			, `createdAt`
 		) VALUES
 		(
 			#{userId}
 			, #{postId}
 			, now()
 		)
 		
 	</insert>
 
 	<select id="selectCountLike" parameterType="map" resultType="int">
 		SELECT
 			COUNT(*)
 		FROM
 			`like`
 		WHERE
 			`postId` = #{postId}
 			AND `userId` = #{userId}
 	</select>
 	
 	<select id="selectCountLikeByPostId" parameterType="int" resultType="int">
	 	SELECT
	 		COUNT(*)
	 	FROM
			`like`
	 	WHERE
	 		`postId` = #{postId}
	 </select>
	 
	 <delete id="deleteLike" parameterType="map">
 		DELETE FROM
 			`like`
 		WHERE
 			`postId` = #{postId}
 			AND `userId` = #{userId}
 		
 	</delete>
 	
 	<delete id="deleteLikeByPostId" parameterType="int">
 		DELETE FROM
 			`like`
 		WHERE
 			`postId` = #{postId}
 			
 	</delete>
 </mapper>